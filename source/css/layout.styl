html {
  * {
    box-sizing: border-box;
  }
}

.content {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  min-height: 100vh;

  .body {
    flex: 1 0 auto;
  }
}

.container {
  margin: 0 auto;
  width: 100%;

  +responsive(xll) {
    max-width: 1360px;
  }

  +responsive(xl) {
    max-width: 1140px;
  }

  +responsive(lg) {
    max-width: 960px;
  }

  +responsive(md) {
    max-width: 720px;
  }

  +responsive(sm) {
    max-width: 540px;
  }

  +responsive(xs) {
    max-width: 100%;
    padding: 0 1.5rem;
  }
}
