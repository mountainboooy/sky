header {
  height: 56px;
  display: flex;

  .container {
    width: 100%;
    height: 100%;
    justify-content: flex-start;
    align-items: center;
  }

  .logo {
    display: inline-block;
    text-align: center;
    font-size: 27px;
    line-height: 48px;
    height: 48px;
    width: 48px;
    margin-left: -12px;
    cursor: pointer;


    &-text {
      border-bottom: 4px solid secondary-color;
    }
  }
