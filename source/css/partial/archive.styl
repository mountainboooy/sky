.archive {
  padding: 0 3rem;

  +responsive(xs) {
    padding: 0 1rem;
  }

  > ul {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-column-gap: 3rem;

    +responsive(xs) {
      grid-template-columns: repeat(4, 1fr);
      grid-column-gap: 1rem;
    }

    > li {
      grid-column: span 4;

      +responsive(xl) {
        grid-column: span 3;
      }

      +responsive(md) {
        grid-column: span 6;
      }

      +responsive(xs) {
        grid-column:  span 4;
      }
    }
  }

  &__page-nav {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-column-gap: 3rem;

    .page-nav {
      grid-column: 5 / span 4;

      +responsive(xl) {
        grid-column: 4 / span 6;
      }
    }
  }
}
