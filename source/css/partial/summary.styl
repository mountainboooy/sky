.summary {
  width: 100%;
  height: 100%;
  border: 1px solid border-color;
  display: flex;
  flex-direction: column;
  text-decoration: none;
  transition: .15s;


  &__title {
    color: text-color;
    margin: 14px 0 0;
    font-size: 17px;
    line-height: 1.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  &__thumbnail {
    width: 100%;
    position: relative;

    &:before {
      content: '';
      display: inline-block;
      width: 1px;
      padding-top: 52.5%;
    }

    img {
      position: absolute;
      top: -1px;
      left: -1px;
      width: calc(100% + 2px);
      height: 100%;
      background: rgba(gray-light, 50%);
      object-fit: cover;
      max-width: none;
    }
  }

  &__body {
    padding: 21px 20px;
  }

  &__date {
    font-size: 1rem;
    line-height: 1.75rem;
    color: gray;
    font-weight: 600;
    font-family: en-font-family;
  }

  &__tags {
    margin-top: 14px;
    line-height: 21px;
    color: gray;
  }

  &__tag {
    font-size: 12px;
    font-weight: 600;
    margin-right: 10px;
  }

    &:hover {
      box-shadow: 0 0 12px rgba(gray,  30%);
      text-decoration: none;

      .summary__title,
      .summary__date,
      .summary__tags {
        color: primary-color;
      }
    }
}
