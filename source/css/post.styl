.post {
  padding: 52px 0 0;
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-column-gap: 40px;

  .container {
    max-width: 720px;

    grid-column: 3 / span 8;

    +responsive(md) {
      grid-column: 2 / span 10;
    }

    +responsive(sm) {
      grid-column: 2 / span 10;
    }

    +responsive(xs){
      grid-column: 1 / span 12;
      }
  }

  footer {
    grid-column: 1 / span 12;
  }

  &-title {
    margin: 16px 0 64px;
  }

  &-tags {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    align-items: flex-start;
    margin: 0 -4px 24px;
  }

  &-tag {
    margin: 4px;
  }

  .popular-posts {
    list-style: none;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-column-gap: 40px;

    &-item {
      grid-column: span 6;
      border-top: 1px solid splitter-color-dark;
      padding: .5rem 0 3rem;
    }

    &-date {
      font-family: 'Roboto'
      color: text-color-dark-weak;
      line-height: 24px;
      font-weight: 500;
    }

    &-title {
      a {
        color: text-color-dark-strong;
        text-decoration: none;

        &:hover {
          text-decoration: underline;
        }
      }
    }

    &-excerpt {
      max-height: 4.5rem;
      overflow: hidden;

      p {
        margin: 0;
      }
    }


  }
}
