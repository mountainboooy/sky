.hidden-xs {
  +responsive(xs) {
    display: none;
  }
}

.hidden-sm {
  +responsive(sm) {
    display: none;
  }
}

.unstyled-list {
  list-style: none;
  padding: 0;
}

.unstyled-link {
  color: inherit;
  text-decoration: none;

  &:hover,
  &:focus,
  &:active {
    color: inherit;
    text-decoration: none;
  }
}
