table {
  margin: 2rem 0;
  max-width: 100%;
  border-collapse: collapse;
  border: 1px solid table-border-color;
  font-size: small-font-size;
  line-height: 1.75rem;
}

th {
  border: 1px solid table-border-color;
  border-bottom: 1px solid table-border-color;
  font-weight: bold;
  text-align: left;
  background: table-header-bg;
}

td {
  border: 1px solid table-border-color;
}

th, td {
  padding: 4px 12px;
}

tr,td,th {
  vertical-align: middle;
}
