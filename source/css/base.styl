.container {
  +responsive(xs) {
    padding: 0 1rem;
  }
}

pre {
  margin: 24px 0;
}

.btn {
  display: inline-block;
  text-decoration: none;
  color: text-color;
  font-size: 16px;
  line-height: 24px;
  padding: 0 10px;
}

.btn-default {
  border: 1px solid #333;

  &:hover {
    background: #333;
    color: #fff;
  }
}

.unstyled-link {
  text-decoration: none;
}

.unstyled-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.unstyled-link {
  text-decoration: none;
}

.align-center {
  text-align: center;
}

.hidden-xs {
  display: block;

  +responsive(xs) {
    display: none;
  }
}

.visible-xs {
  display: none;

  +responsive(xs) {
    display: block;
  }
}

.content {
  width: 100%;
  display: flex;

  +responsive(xs) {
    display: block;
  }

  &-nav {
    width: 16rem;
    height: 100vh;
    background: blue;
    flex-shrink: 0;

    +responsive(xs) {
      display: none;
    }
  }

  &-main {
    flex-grow: 1;

    +responsive(xs) {
      width: 100%;
    }
  }
}
