html {
  font-size: 16px;
}

body {
  font-family: 'Open Sans', sans-serif;
  color: text-color-dark-strong ;
  font-size: 15px;
  line-height: 1.5rem;
  -webkit-font-smoothing: antialiased;
}

h1 {
  font-size: 1.5rem;
  line-height: 2.25rem;
  margin: 0.75rem 0 1.5rem;
  font-weight: bold;
}

h2 {
  font-size: 1.25rem;
  line-height: 1.5rem;
  margin: 3rem 0 1.5rem;
  font-weight: bold;
}

h3 {
  font-size: 1rem;
  line-height: 1.75rem;
  font-weight: bold;
  margin: 1.5rem 0;
}

p {
  margin: 1.5rem 0;
}

a {
  color: text-link-color;

  &:hover {
    color text-link-color-hovered;
  }
}

pre {
  margin: 24px 0;
}

.container {
  max-width: 621px;
  margin: 0 auto;
}

.btn {
  display: inline-block;
  text-decoration: none;
  color: text-color;
  font-size: 16px;
  line-height: 24px;
  padding: 0 10px;
}

.btn-default {
  border: 1px solid #333;

  &:hover {
    background: #333;
    color: #fff;
  }
}

.unstyled-link {
  color: inherit;
  text-decoration: none;
}

.unstyled-list {
  list-style: none;
  margin: 0;
}
