body {
  font-family: 'Open Sans', sans-serif;
  color: text-color;
  font-size: 15px;
  line-height: 28px;
  -webkit-font-smoothing: antialiased;
}

h1 {
  font-size: 26px;
  line-height: 36px;
  margin: 0;
}

h2 {
  font-size: 20px;
  line-height: 32px;
  margin: 36px 0 16px;
  padding-left: 16px;
  border-left: 4px solid  secondary-color;
}

h3 {
  font-size: 17px;
  line-height: 28px;
  font-weight: bold;
  margin: 32px 0 16px;
}

pre {
  margin: 24px 0;
}

.container {
  max-width: 621px;
  margin: 0 auto;
}

p {
  margin: 0;
}

.btn {
  display: inline-block;
  text-decoration: none;
  color: text-color;
  font-size: 16px;
  line-height: 24px;
  padding: 0 10px;
}

.btn-default {
  border: 1px solid #333;

  &:hover {
    background: #333;
    color: #fff;
  }
}

.unstyled-link {
  color: inherit;
  text-decoration: none;
}

.unstyled-list {
  list-style: none;
  margin: 0;
}
