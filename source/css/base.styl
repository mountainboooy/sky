body {
  font-family: 'Open Sans', sans-serif;
  color: text-color;
}

h3 {
  font-size: 21px;
  line-height: 32px;
  margin: 0;
}

.container {
  max-width: 620px;
  margin: 0 auto;
}

.btn {
  display: inline-block;
  text-decoration: none;
  color: text-color;
  font-size: 16px;
  line-height: 24px;
  padding: 0 10px;
}

.btn-default {
  border: 1px solid #333;

  &:hover {
    background: #333;
    color: #fff;
  }
}

.unstyled-link {
  color: inherit;
  text-decoration: none;
}

.unstyled-list {
  list-style: none;
}
