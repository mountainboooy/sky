.summary
  // date
  != partial('./created', {created: post.date})
  
  // tite
  h1.summary__title
    a.unstyled-link(href=url_for(post.path))
      = post.title
      
  .summary__desc
    != post.excerpt
      
  // tag   
  .summary__tags 
    each tag in post.tags.data
      != partial('./tag', {tag: tag, class_name: 'summary-tag'})
